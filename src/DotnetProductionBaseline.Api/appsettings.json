{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "OutboundHttpRetry": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ProductionBaseline": {
    "EnableRequestLogging": true,
    "SlowRequestThresholdMs": 750
  },
  "Database": {
    "ConnectionString": "",
    "HealthCheckTimeoutMs": 500
  },
  "OutboundHttp": {
    "TimeoutMs": 2000,
    "MaxRetryAttempts": 2,
    "BaseDelayMs": 200
  }
}
